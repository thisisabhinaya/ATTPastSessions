<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRequestActivity">

    <LinearLayout
        android:id="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pref1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pref1" />

        <Button
            android:id="@+id/pref2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pref2" />

        <Button
            android:id="@+id/pref3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pref3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/choice">

        <TextView
            android:id="@+id/ask_to_select_a_subj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select subject to view requests"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="67dp" />

        <TextView
            android:id="@+id/your_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Requests for Subject"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="67dp" />

        <TextView
            android:id="@+id/blank_requests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are no session requests for this"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="67dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="38dp"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>