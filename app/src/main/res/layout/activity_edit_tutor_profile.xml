<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".EditTutorProfileActivity">


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_back"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select topics you would like to teach"
                    android:textColor="#90d3d6"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Preference 1"
                    android:textColor="#90d3d6"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/pref1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#90D3D6"
                    android:entries="@array/preference_items"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Preference 2"
                    android:textColor="#90d3d6"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/pref2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#90D3D6"
                    android:entries="@array/preference_items"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Preference 3"
                    android:textColor="#90d3d6"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/pref3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#90D3D6"
                    android:entries="@array/preference_items"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Bio"
                    android:textColor="#90d3d6"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#90d3d6"
                    android:hint="Hi I am......."
                    android:inputType="textMultiLine"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#90d3d6"
                    android:paddingTop="10dp"
                    android:text="LinkedIn Integration"
                    android:textColor="#90d3d6"
                    android:textColorHint="#90d3d6"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/link_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#90d3d6"
                    android:hint="Paste your LinkedIn URL"
                    android:paddingTop="10dp" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/roundedbutton"
                    android:text="Submit"
                    android:textColor="#F5F5F2" />

                <Button

                    android:id="@+id/cancel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundedbutton"
                    android:text="CANCEL"
                    android:textColor="#F5F5F2" />


            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </LinearLayout>

</RelativeLayout>